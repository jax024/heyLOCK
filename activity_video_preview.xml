<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".inroduler.IntrodureActivity">

    <LinearLayout
        android:id="@+id/llTitleRow"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@android:color/transparent"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingHorizontal="@dimen/_10pxh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivBack"
            android:layout_width="@dimen/_30pxh"
            android:layout_height="@dimen/_29pxh"
            android:layout_gravity="center"
            android:background="?attr/selectableItemBackground"
            android:padding="5dp"
            android:src="@drawable/ic_back_arrow"
            android:visibility="visible"
            tools:ignore="ContentDescription" />

        <TextView
            android:id="@+id/tvTitle"
            style="@style/txtCircularStdbold20_1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:paddingHorizontal="@dimen/_15pxh"
            android:singleLine="true"
            android:text="Intruder"
            android:textSize="@dimen/_18sp" />

        <ImageView
            android:id="@+id/ivDelete"
            android:layout_width="@dimen/_30pxh"
            android:layout_height="@dimen/_29pxh"
            android:layout_gravity="center"
            android:layout_marginEnd="@dimen/_10pxh"
            android:background="?attr/selectableItemBackground"
            android:padding="3dp"
            android:src="@drawable/ic_delete"
            android:visibility="visible"
            tools:ignore="ContentDescription" />

        <ImageView
            android:id="@+id/ivSetting"
            android:layout_width="@dimen/_30pxh"
            android:layout_height="@dimen/_29pxh"
            android:layout_gravity="center"
            android:layout_marginEnd="5dp"
            android:background="?attr/selectableItemBackground"
            android:padding="3dp"
            android:src="@drawable/ic_settings_black"
            android:visibility="gone"
            tools:ignore="ContentDescription" />


    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearColumnarrowleft"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="@dimen/_15pxh"
        android:layout_marginTop="?attr/actionBarSize"
        android:layout_marginBottom="@dimen/_75pxv"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <VideoView
            android:id="@+id/videoView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="@dimen/_10pxh"
            android:layout_marginBottom="@dimen/_30pxv"
            android:layout_weight="1.2"
            android:scaleType="fitCenter"
            android:src="@drawable/img_intruderselfie"
            android:visibility="visible"
            tools:ignore="ContentDescription"
            tools:src="@drawable/img_intruderselfie" />




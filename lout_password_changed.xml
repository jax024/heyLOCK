<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layout_root"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_10pxh"
    android:background="@drawable/bg_dialog_rounded"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="@dimen/_10pxh">

        <ImageView
            android:layout_width="@dimen/_100pxh"
            android:layout_height="@dimen/_100pxh"
            android:padding="@dimen/_10pxh"
            android:adjustViewBounds="true"
            android:scaleType="centerInside"
            android:src="@drawable/img_top_password_changed"/>

        <TextView
            style="@style/dialogTitleTextStyle"
            android:text="grant_access" />

        <TextView
            android:id="@+id/tvDialogDesc"
            style="@style/dialogSubTitleTextStyle"
            android:text="password_set_successfully" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/txtDone"
            style="@style/dialogBottomDoneButtonStyle"
            android:layout_marginTop="@dimen/_20pxh"
            android:text="done" />

        <TextView
            android:id="@+id/txtCancel"
            style="@style/dialogBottomCancelTextStyle"
            android:text="cancel" />

    </LinearLayout>

</LinearLayout>